- @no_live_help = true
- @no_footer = true

%section#documentation-editor
  .editor-header
    %h1 Edit documentation

  .editor-content
    %h3 Pages
    %ul
      - DocumentationEditor::Page.group('slug').having('MAX(created_at)').order('id ASC').each do |p|
        %li
          = link_to "#{request.path.split('/admin').first}/#{p.slug}", edit_page_path(p.id)
          - if published_at = DocumentationEditor::Page.where(slug: p.slug).where(preview: false).order('id DESC').first.try(:created_at)
            %small.text-muted
              Published:
              = l published_at, format: :long

    .spacer50
    .line
    %h3 Create a new page
    = simple_form_for DocumentationEditor::Page.new, url: '/doc/source' do |f|
      = f.input :slug, placeholder: 'tutorials/my-tutorial', hint: "Will be appended to #{request.path.split('/admin').first}/"
      = f.submit 'Create', class: 'btn btn-success'
